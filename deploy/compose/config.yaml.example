app:
  # Backend listens inside container. Exposed port is controlled by frontend/nginx only.
  port: 8001

monitor:
  c2c_interval_minutes: 6
  forex_interval_hours: 1
  alert_threshold_percent: 0.1
  target_amounts: [0, 30, 50, 200, 500, 1000]
  exchanges: ["binance", "okx"]

database:
  # IMPORTANT: use mysql service name in docker network, not 127.0.0.1.
  dsn: "user:password@tcp(mysql:3306)/c2c_monitor?charset=utf8mb4&parseTime=True&loc=Local"

notification:
  email:
    smtp_host: "smtp.qq.com"
    smtp_port: 587
    username: "your_email@example.com"
    password: "your_smtp_password"
    from: "your_email@example.com"
    to: ["344686925@qq.com"]
